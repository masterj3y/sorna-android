<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sorna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font_ir_yekan_regular</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Text" parent="Widget.MaterialComponents.TextView" />

    <style name="BoldText" parent="Text">
        <item name="android:fontFamily">@font/ir_yekan_bold</item>
    </style>

    <style name="Headline5" parent="BoldText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#131313</item>
    </style>

    <style name="ToolbarTitle" parent="BoldText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Body" parent="Text" />

    <style name="ClickableText" parent="Text">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">#171717</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="UserProfileEmail" parent="Text">
        <item name="android:textColor">#f9f9f9</item>
    </style>

    <style name="ProfileOption" parent="ClickableText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:height">1dp</item>
        <item name="android:background">#9A9A9A</item>
    </style>

    <style name="SearchInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_search_input</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#CDCDCD</item>
        <item name="android:textColor">#E8E8E8</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">8dp</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">8dp</item>
    </style>

    <style name="AdImageLayout">
        <item name="android:background">@color/LightBlue_700</item>
    </style>
</resources>