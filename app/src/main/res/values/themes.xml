<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sorna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font_ir_yekan_regular</item>
    </style>

    <style name="Text" parent="Widget.MaterialComponents.TextView" />

    <style name="BoldText" parent="Text">
        <item name="android:fontFamily">@font/ir_yekan_bold</item>
    </style>

    <style name="Headline5" parent="BoldText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#131313</item>
    </style>

    <style name="ToolbarTitle" parent="BoldText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Body" parent="Text" />

    <style name="ClickableText" parent="Text">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">#171717</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="UserProfileEmail" parent="Text">
        <item name="android:textColor">#f9f9f9</item>
    </style>

    <style name="ProfileOption" parent="ClickableText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:height">1dp</item>
        <item name="android:background">#9A9A9A</item>
    </style>

    <style name="SearchInput" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_search_input</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#CDCDCD</item>
        <item name="android:textColor">#E8E8E8</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">8dp</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">8dp</item>
    </style>

    <style name="DataState" parent="Text">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="NetworkError" parent="DataState">
        <item name="android:text">@string/network_error</item>
        <item name="android:drawableTop">@drawable/ic_ils_error</item>
        <item name="android:drawablePadding">32dp</item>
    </style>

    <style name="EmptyData" parent="DataState">
        <item name="android:text">@string/ads_list_is_empty</item>
        <item name="android:drawableTop">@drawable/ic_ils_empty</item>
    </style>

    <style name="SearchData" parent="DataState">
        <item name="android:text">@string/search_ads</item>
        <item name="android:drawableTop">@drawable/ic_ils_search</item>
    </style>

    <style name="EmptySearchData" parent="DataState">
        <item name="android:text">@string/search_ads_empty</item>
        <item name="android:drawableTop">@drawable/ic_ils_search_empty</item>
    </style>

    <style name="EmptySavedData" parent="DataState">
        <item name="android:text">@string/saved_ads_empty</item>
        <item name="android:drawableTop">@drawable/ic_ils_save</item>
    </style>

    <style name="EmptyCategorizedData" parent="DataState">
        <item name="android:text">@string/categorized_ads_empty</item>
        <item name="android:drawableTop">@drawable/ic_ils_empty</item>
    </style>

    <style name="LoadingLayout">
        <item name="android:background">#fff</item>
    </style>

    <style name="AdImageLayout">
        <item name="android:background">@color/LightBlue_700</item>
    </style>
</resources>